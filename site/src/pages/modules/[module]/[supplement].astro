---
import { getCollection, render } from 'astro:content';
import Base from '../../../layouts/Base.astro';

export async function getStaticPaths() {
  const supplements = await getCollection('supplements');

  return supplements
    .filter((entry) => !entry.id.toLowerCase().includes('readme')) // Exclude READMEs
    .map((entry) => {
      const [module, ...rest] = entry.id.split('/');
      const supplement = rest.join('/') + '.md'; // Restore .md extension for URL matching
      return {
        params: { module, supplement },
        props: { entry },
      };
    });
}

const { entry } = Astro.props;
const { Content } = await render(entry);

// Extract title from first H1 if no frontmatter title
const title = entry.data.title || entry.id.split('/').pop();
---

<Base title={title}>
  <article>
    <nav class="breadcrumb">
      <a href={`/modules/${Astro.params.module}/`}>‚Üê Back to module</a>
    </nav>
    <Content />
  </article>
</Base>

<style>
  article {
    max-width: 65ch;
    margin: 0 auto;
  }

  .breadcrumb {
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }

  .breadcrumb a {
    color: #666;
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }
</style>
